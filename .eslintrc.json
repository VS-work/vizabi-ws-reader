{
  "extends": "./node_modules/eslint-config-valorsoft/.eslintrc.json",
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "READER_VERSION": true,
    "READER_BUILD_TIMESTAMP": true
  },
  "rules": {
    "max-statements": [1],
    "arrow-body-style": "off",
    "max-len": [2, 200],
    "no-unused-vars": ["error", { "args": "none" }],
    "no-console": "off",
    "camelcase": "off",
    "func-names": "off",
    "no-invalid-this": "off",
    "object-curly-spacing": ["error", "always"],
    "no-underscore-dangle": "off",
    "sort-imports": "off",
    "id-length": [
      "error",
      {
        "exceptions": [
          "_"
        ]
      }
    ],
    "no-magic-numbers": [
      2,
      {
        "ignore": [
          -1,
          0,
          1
        ]
      }
    ],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ]
  }
}

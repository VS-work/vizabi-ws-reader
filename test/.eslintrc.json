{
  "env": {
    "mocha": true,
    "node": true
  },
  "rules": {
    "id-length": [
      "error",
      {
        "exceptions": [
          "_", "t"
        ]
      }
    ],
    "no-undefined": "off",
    "id-length": "off",
    "max-lines": "off",
    "no-magic-numbers": ["error", { "ignoreArrayIndexes": true, "ignore": [-1, 0, 1]}],
    "init-declarations": "off",
    "no-sync": 0,
    "prefer-arrow-callback": "off",
    "newline-per-chained-call": 0,
    "no-unused-expressions": 0
  }
}
